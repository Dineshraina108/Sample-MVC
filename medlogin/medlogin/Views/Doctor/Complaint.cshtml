                @Html.EditorFor(model => model.Doctorname, new { htmlAttributes = new { @class = "form-control",@Value=@Session["Doctorname"] } })
                @Html.ValidationMessageFor(model => model.Doctorname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <input type="submit" value="Cancel" class="btn btn-default" onclick="confirm('Are you exist');" formaction="Cancel" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
