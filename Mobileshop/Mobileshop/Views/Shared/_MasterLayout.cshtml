<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DK MEDICAL SITE</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body style="background-image:url(../../Content/images/bg/Blue.jpg); background-size:cover;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>           
                    <li>@Html.ActionLink("About us", "about", "Home")</li>
                </ul>
                <ul class="nav navbar-header" style="padding-left:230px;">
                    <li><img src="~/Content/images/Cool Text - Dinesh Raina Shop 338263511449247.png" style="align-content:center; width:300px; height:50px; text-align:center  " /></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Registration", "Register", "Home")</li>
                    @*<li>@Html.ActionLink("Register", "Lreg", "Home")</li>*@
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                </ul> 
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="align-content:center; text-align:center; font-family:'Times New Roman'; font-size:15px;"> <b>Powered by dinesh kumar <br /> Zencorp Techno solutions</b></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>