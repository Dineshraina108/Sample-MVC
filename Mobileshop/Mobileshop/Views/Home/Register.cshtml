@model Mobileshop.Models.Userreg

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2 style="text-align:center;">Register</h2>

@using (Html.BeginForm()) 
